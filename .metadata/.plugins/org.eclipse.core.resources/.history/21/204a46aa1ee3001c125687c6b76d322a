#spring.datasource.url=jdbc:postgresql://safeclutch.c11hunv2feip.eu-central-1.rds.amazonaws.com:5432/safeclutch
spring.datasource.url=jdbc:postgresql://localhost:5432/safeclutchDB
spring.datasource.username=postgres
